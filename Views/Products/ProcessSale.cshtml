@model InventoryManagementSystem.Models.Product

<h2>Process Sale for @Model.Name</h2>

<p>Current Stock: @Model.StockQuantity</p>

<form asp-action="ProcessSale">
    <input type="hidden" asp-for="ProductID" />
    <div class="form-group">
        <label>Sale Quantity</label>
        <input type="number" name="quantity" class="form-control" min="1" max="@Model.StockQuantity" />
    </div>
    <div class="form-group">
        <input type="submit" value="Process Sale" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
